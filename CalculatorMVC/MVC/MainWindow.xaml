<Window x:Class="MVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVC"
        mc:Ignorable="d"
        Title=" MVC" Height="350" Width="516.12">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" >Выберите арифмитическую операцию:</TextBlock>
            <TextBox x:Name="ChangeXFirst" Margin="98,50,328,-50" TextChanged="ChangeXFirst_TextChanged" Height="37" RenderTransformOrigin="0.5,0.5"/>
            <ComboBox x:Name="ComboChange" SelectionChanged="ComboChange_SelectionChanged" Margin="210,10,201,0" Height="39"/>
            <TextBox x:Name="ChangeXSecond" TextChanged="ChangeXSecond_TextChanged" Margin="330,-36,92,0" Height="36" RenderTransformOrigin="0.5,0.5"/>
            <Button x:Name="Command" Height="37" Click="controller_Click" Margin="0,15,132,0" HorizontalAlignment="Right" Width="218" Content="Вычислить"/>
            <TextBlock Height="36" Margin="0,10,230,0">Результат:</TextBlock>
            <TextBlock x:Name="Result"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
